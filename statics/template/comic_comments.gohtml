<html lang="fa">
  <head>
    {{template "_head" .Title}}
  </head>
  <body class="bg-[#f7f8fa] text-gray-400 antialiased font-regular max-w-2xl mx-auto" style="overflow-x:clip;float:right;min-width:100%;direction:rtl" data-new-gr-c-s-check-loaded="8.899.0" data-gr-ext-installed="" cz-shortcut-listen="true">
    <div class="header w-full h-14 flex flex-row px-4 justify-center items-center">
      <h1 class="font-bold text-xl text-gray-900">سرراست
      </h1>
      <div class="text-xs text-gray-500 mr-4 ">در حال بروزرسانی
      </div>
    </div>
    <div class="max-w-2xl mx-auto"> 
      <div class="bg-white rounded-4xl" style="background:url('/api/img/series/bitch-girlfriend/thumb.webp');background-size:cover;backdrop-filter:blur(10px);background-position:center;background-repeat:no-repeat;background-attachment:fixed">
        <div class="w-full backdrop-blur bg-blend-darken  hover:bg-blend-lighten rounded-t-3xl h-[50vh] bg-fixed flex-row sm:flex items-center justify-evenly  ">
          <h2 class="text-2xl sm:text-5xl text-white drop-shadow-xl text-center pt-3">دوست دختر جنده
          </h2>
          <div class="flex justify-center mt-3">
            <img src="/api/img/series/bitch-girlfriend/thumb.webp" class="rounded-2xl h-[30vh]">
          </div>
        </div>
        <div class="bg-white rounded-4xl  pt-4 w-full">
          <div class="px-4">
            <p class="text-md text-gray-600">...
            </p>
          </div>
          <div class="px-4">
            <div class="flex mt-4 w-full bg-[#fef6e3] py-4 rounded-2xl text-black">
              <div class="flex-1 text-center">
                <div class="text-xl font-semibold text-[#f2a930]">25
                </div>
                <div class="text-xs font-semibold">قسمت
                </div>
              </div>
              <div class="flex-1 text-center">
                <div class="text-xl font-semibold text-[#f2a930]">0.10
                </div>
                <div class="text-xs font-semibold">امتیاز
                </div>
              </div>
              <div class="flex-1 text-center">
                <div class="text-xl font-semibold text-[#f2a930]">ongoing
                </div>
                <div class="text-xs font-semibold">وضعیت
                </div>
              </div>
            </div>
            <div class="mt-3 flex justify-center">
              <a class="w-full" href="/series/bitch-girlfriend/episode-001-P1Hv3">
                <button class="items-center text-gray-800 transition-all  font-semibold rounded-xl outline-none w-full sm:w-full py-2 pl-5 pr-5 mb-3 sm:mb-0 h-10 active:scale-90 hover:bg-opacity-90 focus:ring-2 active:bg-opacity-80 bg-[#f7cc5f] ring-[#f7cc5f]" type="button">قسمت اول
                </button>
              </a>
            </div>
          </div>
          <div class="px-4 mt-1 w-full sticky top-0">
            <div class="rounded-3xl overflow-hidden relative top-4">
              <div class="flex flex-row justify-between items-center w-full h-11 px-1.5 bg-[#edf1f8]">
                <a aria-current="page" class="h-8 text-sm rounded-2xl w-full active:scale-90 hover:scale-95 text-gray-900 font-semibold active" href="/series/bitch-girlfriend">
                  <button class="h-8 text-sm rounded-2xl w-full active:scale-90 hover:scale-95 text-gray-900 font-semibold ">قسمت ها
                  </button>
                </a>
                <a aria-current="page" class="h-8 text-sm rounded-2xl w-full active:scale-90 hover:scale-95 text-gray-900 font-semibold bg-white shadow-link active" href="/series/bitch-girlfriend/comments">
                  <button class="h-8 text-sm rounded-2xl w-full active:scale-90 hover:scale-95 text-gray-900 font-semibold ">کامنت ها
                  </button>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="flex justify-center mt-8 relative z-0 max-w-screen">
        <ins id="945613" data-width="300" data-height="112" class="max-w-screen">
        </ins>
      </div>
      <div class="mt-8">

        {{range $c := .Comments}}
            {{template "_comic_comment" $c}}
        {{end}}
      </div> 
    </div>

    <div class="mt-16">
    </div>
    {{template "_footer" .IsLogged}}

  </body>
</html>
